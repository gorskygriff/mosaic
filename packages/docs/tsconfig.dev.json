{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "./out-tsc/app",
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@ptsecurity/cdk/*": ["../cdk/*"],
            "@ptsecurity/mosaic/*": ["../mosaic/*"],
            "@ptsecurity/mosaic-examples": ["../mosaic-examples"],
            "@ptsecurity/mosaic-moment-adapter/*": ["../mosaic-moment-adapter/*"],
            "@ptsecurity/mosaic-luxon-adapter/*": ["../mosaic-luxon-adapter/*"]
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "src/test.ts",
        "src/**/*.spec.ts",
        "src/assets"
    ]
}
