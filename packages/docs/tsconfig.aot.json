{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "./out-tsc/app",
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@ptsecurity/cdk/*": ["../../dist/cdk/*"],
            "@ptsecurity/mosaic/*": ["../../dist/mosaic/*"],
            "@ptsecurity/mosaic-examples": ["../../dist/mosaic-examples"],
            "@ptsecurity/mosaic-moment-adapter/*": ["../../dist/mosaic-moment-adapter/*"],
            "@ptsecurity/mosaic-luxon-adapter/*": ["../../dist/mosaic-luxon-adapter/*"]
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "src/test.ts",
        "src/**/*.spec.ts",
        "src/assets"
    ]
}
